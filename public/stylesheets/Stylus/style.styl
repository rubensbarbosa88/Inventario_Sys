@import 'nib/'
// **********GLOBAL CONFIGS**********
*
    margin: 0
    padding: 0
nav
    background-color: #263238
.me
    margin: 8px auto
    @media(max-width:600px)
        display: block
        margin: 4px auto
.htitle
    font-size: 15px !important
    // color: #e0f2f1 !important
.dropdown-button
    i
        color: #80cbc4
        &:hover
            color: #a7ffeb
.fot
    padding: 0 !important
    margin: 0 !important
    background-color: rgba(0,0,0,0.9) !important
    .cop
        height: 70px !important
        padding-top: 10px
        span
            font-size: 1em
            @media(max-width:610px)
                font-size: 0.8em                 
        
.oi
    border: 1px solid red
.oi2
    border: 1px solid blue
.oi3
    border: 1px solid green
    
//
#home
    background: url('/images/office.jpg') no-repeat
    background-size: 100% 100%
    // height: 86vh
    overflow: hidden
    h1
        color: rgba(0,0,0,1)
        text-shadow: 1px 1px 1px rgba(255,255,255,0.6)
        font-family: 'Baloo Tamma', cursive
        text-transform: uppercase
        text-align: center
        margin-top: 80px
        font-size: 6em
    
.selecao
    margin: 50px auto
    height: 53.5vh
    a
        padding: 20%
        display: block
        text-align: center
        border: 1px solid black
        border: 2px solid #039be5
        border-radius: 4px
        margin-bottom: 15px
        // i
        //     @media(max-width: 1400px)
        //         font-size: 5em
        span
            color: rgba(255,255,255,0.3)
            font-weight: bold
            display: block
            // @media(max-width: 1600px)
            //     font-size: 0.8em
        &:hover
            border: 2px solid rgba(0,0,0,1)
            transition: 0.3s
            background-color: #039be5
            i
                transition: 0.5s
                color: white
            span
                transition: 0.5s
                color: rgba(255,255,255,1)
                font-weight: bold
                display: block

