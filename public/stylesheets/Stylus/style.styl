    margin-top: 60px
    button
        margin-right: 10px
        float: right
.erro-form
    border-bottom: 1px solid red !important
    
//********************
//      TABLE
//********************
#computers
    .container
        @media(max-width:1500px)
            width: 80% !important
        @media(max-width:1200px)
            width: 90% !important
        @media(max-width:1100px)
            width: 95% !important
        @media(max-width:1000px)
            width: 99% !important
        @media(max-width:990px)
            width: 90% !important
.load-table
    margin: 150px auto 450px auto
    width: 66px
.num
    font-size: 0.8em
    color: rgba(0,0,0,1)
.btn-dropdown
    cursor: pointer
    opacity: 0.1
    i
        color: black
    &:hover
        opacity: 1
        i
            color:#90caf9
.btnDelete
    cursor: pointer
    opacity: 0.1
    i
        color: black
    &:hover
        opacity: 1
        i
            color:#d50000
table
    margin-top: 10px
    margin-bottom: 100px
    thead
        .inf
            color: rgba(0,0,0,0.4)
        th
            a
                color: rgba(20,20,20,1)
                cursor: pointer
            @media(max-width:1400px)
                font-size: 0.950em
    tbody
        .enfa
            background-color: rgba(255,0,0,0.6)
            font-weight: bold
        td
            font-size: 0.970em
            position: relative
            @media(max-width:1600px)
                font-size: 0.880em
            @media(max-width:1000px)
                font-size: 0.880em
            @media(max-width:990px)
                font-size: 0.970em
            .pat
                font-size: 0.8em
                padding: 15px
                color: rgba(0,0,0,1)
                font-weight: bolder
                background:url('/images/logo-small.png') rgba(170,170,170,0.8) no-repeat
                background-position: 30px 0
                border-bottom: 2px solid rgba(0,0,0,0.6)
            .dropdown
                // border: 1px solid red
                width: 120px 
                z-index: 10
                position: absolute
                top: 0
                background-color: white
                li:nth-child(3)
                    margin: 10px 0 
                li:nth-child(4)
                    text-align: center
                    a
                        font-size: 0.9em
                        color: rgba(0,0,0,0.8)
                        &:hover
                            color: black
                     
                li
                    margin: 10px 10px
                    font-size: 1.1em
                    .btnEdit
                        cursor:pointer
                        opacity: 0.2
                        display: block
                        border: 1px solid transparent
                        i
                            color: black
                        span
                            vertical-align: middle
                            color: black
                            font-size: 0.9em
                        &:hover
                            opacity: 1
                            i
                                color: #01579b
                            span
                                color: #01579b
                    .btnDelete
                        cursor:pointer
                        opacity: 0.2
                        display: block
                        border: 1px solid transparent
                        i
                            color: black
                        span
                            vertical-align: middle
                            color: black
                            font-size: 0.9em
                        &:hover
                            opacity: 1
                            i
                                color:#d50000
                            span
                                color: #d50000
